{
  "name": "yesterday",
  "version": "1.1.0",
  "description": "Yesterday - Daily Task Planner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "dist": "tsc && vite build && electron-builder",
    "dist:mac": "tsc && vite build && electron-builder --mac",
    "dist:win": "tsc && vite build && electron-builder --win"
  },
  "build": {
    "appId": "com.yesterday.app",
    "productName": "Yesterday",
    "directories": {
      "output": "dist-electron"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/img/android-chrome-512x512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/img/favicon.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.0",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.9.0",
    "electron": "^33.2.1",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^5.1.4",
    "wait-on": "^8.0.1"
  }
}